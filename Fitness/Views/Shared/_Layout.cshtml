<!DOCTYPE html>
<html lang="@Fitness.Helpers.CultureHelper.GetCurrentNeutralCulture() " dir="@(Fitness.Helpers.CultureHelper.IsRighToLeft() ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title> SeniorsSoft - @ViewBag.Title</title>
    @*@Styles.Render("~/Content/AllMyCss")*@
    @Styles.Render("~/Content/AllMyCss" + (Fitness.Helpers.CultureHelper.IsRighToLeft() ? "-rtl" : ""))
    @*@Scripts.Render("~/bundles/modernizr")*@
    @if (Resources.Resource.CurLang == "Arb")
    {
        <style>
            .navbar.navbar-inverse.navbar-fixed-top .navbar-right .dropdown-menu {
                right: auto !important;
                left: 0 !important;
            }

            .fixed-sidebar-left .side-nav > li ul.collapse li a.active {
                color: greenyellow !important;
            }
        </style>

    }



</head>
<body>
    <!-- Preloader -->
    <div class="preloader-it">
        <div class="la-anim-1"></div>
    </div>
    <!-- /Preloader -->
    <div class="wrapper theme-1-active pimary-color-pink">
        <!-- Top Menu Items -->
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="mobile-only-brand pull-left">
                <div class="nav-header pull-left">
                    <div class="logo-wrap">
                        <a href="/Home/index">

                            <img class="brand-img" src="~/Logs/LogoIn.png" alt="brand" style="width:20px">
                            <span class="brand-text">SeniorsSoft</span>
                        </a>
                    </div>
                </div>
                <a id="toggle_nav_btn" class="toggle-left-nav-btn inline-block ml-20 pull-left" href="javascript:void(0);"><i class="zmdi zmdi-menu"></i></a>

                <a id="toggle_mobile_nav" class="mobile-only-view" href="javascript:void(0);"><i class="zmdi zmdi-more"></i></a>

            </div>
            <div id="mobile_only_nav" class="mobile-only-nav pull-right">
                <ul class="nav navbar-right top-nav pull-right">

                    <li class="dropdown alert-drp">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown"><i class="zmdi zmdi-notifications top-nav-icon"></i><span class="top-nav-icon-badge js-notifications-count">0</span></a>
                        <ul class="dropdown-menu alert-dropdown" data-dropdown-in="bounceIn" data-dropdown-out="bounceOut" id="NotificationHeader">
                        </ul>
                    </li>
                    <li class="dropdown auth-drp">

                        <a href="#" class="dropdown-toggle pr-0" data-toggle="dropdown"><img src="~/CompanyLogo/male.png" alt="Login User" class="user-auth-img img-circle" /><span class="user-online-status"></span></a>
                        <ul class="dropdown-menu user-auth-dropdown" data-dropdown-in="flipInX" data-dropdown-out="flipOutX">
                            <li>
                                <a href="/Home/index"><i class="zmdi zmdi-account"></i><span>@Resources.Resource.Home</span></a>
                            </li>

                            @if (Resources.Resource.CurLang == "Arb")
                            {
                                <li>
                                    <a href="/Home/SetCulture?culture=en"><i class="fa fa-language fa-fw"></i>English</a>
                                </li>

                            }
                            else

                            {
                                <li>
                                    <a href="/Home/SetCulture?culture=ar"><i class="fa fa-language fa-fw"></i>عربي</a>
                                </li>
                            }



                            <li>
                                <a href="/Manage/ChangePassword"><i class="fa fa-key"></i>@Resources.Resource.ChangePassword</a>
                            </li>

                            <li class="divider"></li>
                            <li>
                                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                {
                                    @Html.AntiForgeryToken()



                                    <a href="javascript:document.getElementById('logoutForm').submit()" style="margin-right:24px;margin-left:24px;"><i class="zmdi zmdi-power"></i> @Resources.Resource.LogOff</a>

                                }


                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
        <!-- /Top Menu Items -->
        <!-- Left Sidebar Menu -->
        <div class="fixed-sidebar-left" style="font-family:Tahoma">
            @Html.Partial("LeftMenu")

        </div>
        <!-- /Left Sidebar Menu -->
        <!-- Right Sidebar Menu -->
        <!-- /Right Sidebar Menu -->
        <!-- Main Content -->
        <div class="page-wrapper">
            <div class="container-fluid pt-25">
                @RenderBody()
            </div>

            <!-- Footer -->
            <footer class="footer container-fluid pl-30 pr-30">
                <div class="row">
                    <div class="col-sm-12">
                        <p>2020 &copy; SeniorsSoft</p>
                    </div>
                </div>
            </footer>
            <!-- /Footer -->

        </div>
        <!-- /Main Content -->

    </div>
    <!-- /#wrapper -->
    <!-- JavaScript -->



    @Scripts.Render("~/bundles/lib")
    @Scripts.Render("~/bundles/app")

    @RenderSection("scripts", required: false)


    <script>
        $(document).ready(function () {
            $("#NotificationHide").on("click", function () {

                $.post("/Notification/MarkNotifcationAsRead")
                    .done(function () {

                        $(".js-notifications-count")
                            .text("")
                            .addClass("hide");
                    });
            });

        });


    </script>
</body>

</html>
