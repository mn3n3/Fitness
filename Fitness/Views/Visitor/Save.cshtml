            if (event.keyCode == 13)
                $("#BirthDate").focus().select();

        });
        $("#BirthDate").keyup(function (event) {
            if (event.keyCode == 13) {
                $("#VistDate").focus().select();
            }
        });
        $("#VistDate").keyup(function (event) {
            if (event.keyCode == 13)
                $("#Phone1").focus().select();
        });
        $("#Phone1").keyup(function (event) {
            if (event.keyCode == 13)
                $("#Email").focus().select();
        });
        $("#Email").keyup(function (event) {
            if (event.keyCode == 13)
                $("#Address").focus().select();
        });
        $("#Address").keyup(function (event) {
            if (event.keyCode == 13)
                $("#Note").focus().select();
        });
        $("#Note").keyup(function (event) {
