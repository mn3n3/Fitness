        $(document).on('click', '#Clear', function () {
            var today = new Date();
            var dd = today.getDate();
            var mm = today.getMonth() + 1;
            var yyyy = today.getFullYear();
            if (dd < 10) {
                dd = '0' + dd;
            }
            if (mm < 10) {
                mm = '0' + mm;
            }
            var today = dd + '/' + mm + '/' + yyyy;
            document.getElementById("NationalityCode").selectedIndex = "0";
            document.getElementById("SourceCode").selectedIndex = "0";
            document.getElementById("JobCode").selectedIndex = "0";
            document.getElementById("GenderCode").selectedIndex = "0";
            document.getElementById("BirthDate").value = today;
            document.getElementById("VistDate").value = today;
            document.getElementById("VisitorName").value = '';
            document.getElementById("Note").value = '';
            document.getElementById("Email").value = '';
            document.getElementById("Phone1").value = '';
            document.getElementById("Address").value = '';
            document.getElementById('Interseted').checked = false;
            $("#VisitorName").focus().select();
        });
        $(document).on('click', '#Close', function () {
            window.location = "/Visitor/Index";
        });
