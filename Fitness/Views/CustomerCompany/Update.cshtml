

@model Fitness.Models.CustomerCompany
@{
    ViewBag.Title = @Resources.Resource.Update;
}
    <script>
        $(document).ready(function () {
            $("#CompanyName").focus().select();
        });
    </script>
<div id="myModal" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: block;">
    <div class="modal-dialog modal-sm ">
        <div class="modal-content">
            <div class="modal-header">
                <div class="pull-left">
                    <h6 class="modal-title txt-light" style="font-weight:bold">@Resources.Resource.Update</h6>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="modal-body">
                @Html.ValidationSummary(true, "Please Fix The Foloing Error!")

                <div class="col-lg-12">
                    <div class="form-group">
                        @Html.LabelFor(m => m.CompanyCode)

                        @Html.TextBoxFor(m => m.CompanyCode, new { @id = "CompanyCode", @class = "form-control input-sml", @readonly = "readonly" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.CompanyName)

                        @Html.TextBoxFor(m => m.CompanyName, new { @id = "CompanyName", @class = "form-control input-sml" })
                    </div>
                    
                </div>

            </div>
            <div class="modal-footer">
                <div class="col-lg-12">
                    <button type="submit" class="btn btn-success btn-anim" id="UpdateCustomerCompany"> <i class="fa fa-edit"></i><span class="btn-text">@Resources.Resource.Update</span></button>
                    <button type="button" class="btn btn-default btn-anim" data-dismiss="modal" id="Close"><i class="fa fa-times"></i><span class="btn-text">@Resources.Resource.Close</span></button>
                </div>
            </div>
        </div>
    </div>
</div>







