

@model Fitness.Models.Trainer
@{
    ViewBag.Title = @Resources.Resource.Delete;
}
<div id="myModal" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: block;">
    <div class="modal-dialog modal-sm ">
        <div class="modal-content">
            <div class="modal-header">
                <div class="pull-left">
                    <h6 class="modal-title txt-light" style="font-weight:bold">@Resources.Resource.Delete</h6>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="modal-body">
                @Html.ValidationSummary(true, "Please Fix The Foloing Error!")

                <div class="col-lg-12">
                    <div class="form-group">
                        @Html.LabelFor(m => m.TrainerCode)

                        @Html.TextBoxFor(m => m.TrainerCode, new { @id = "TrainerCode", @class = "form-control input-sml", @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        <label style="font-size :smaller">
                            @Html.CheckBoxFor(m => m.Suspension, new { @id = "Suspension", @disabled = "disabled" }) @Resources.Resource.Suspension
                        </label>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.TrainerName)

                        @Html.TextBoxFor(m => m.TrainerName, new { @id = "TrainerName", @class = "form-control input-sml", @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Percentage)

                        @Html.TextBoxFor(m => m.Percentage, new { @id = "Percentage", @class = "form-control input-sml", @type = "Number", @min = "0", @readonly = "readonly" })
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <div class="col-lg-12">
                    <button type="submit" class="btn btn-anim btnDelete-lg" id="DeleteTrainer"> <i class="fa fa-trash-o"></i><span class="btn-text">@Resources.Resource.Delete</span></button>
                    <button type="button" class="btn btn-default btn-anim" data-dismiss="modal" id="Close"><i class="fa fa-times"></i><span class="btn-text">@Resources.Resource.Close</span></button>
                </div>
            </div>
        </div>
    </div>
</div>

